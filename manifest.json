{
    "manifest_version":2,
    "name": "Cyberbullying detection extension",
    "version": "0.1",
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["content.js"]
        }
    ],
    "background": {
        "scripts":["background.js"]
    },
    "permissions": ["tabs"],
    "browser_action":{
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Cyberbullying detection extension"
    }
}